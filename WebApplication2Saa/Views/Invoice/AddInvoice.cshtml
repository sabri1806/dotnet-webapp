@model  WebApplication2Saa.Models.Invoice
@{
    ViewBag.Title = "New Invoice";
}

<h2>Add Invoice</h2>

@using (Html.BeginForm("AddInvoice", "Invoice", FormMethod.Post))
{
	<h4>@Html.ValidationSummary(true)</h4>
	
	<table cellpadding="0" cellspacing="0">
		<tr>
			<td>Articles</td>
			<td>
				@Html.EditorFor(model => model.InvoiceDetails)
			</td>
		</tr>
		<tr>
			<td></td>
			<td><input name="addInvoice" type="submit" value="Add Invoices" /></td>
		</tr>
	</table>
}


